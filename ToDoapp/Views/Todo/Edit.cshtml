@model Todo

@{
    ViewBag.Title = "Edit Todo";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0"><i class="fas fa-edit me-2"></i>Edit Task</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Title, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-heading"></i></span>
                        @Html.TextBoxFor(model => model.Title, new
                            {
                                @class = "form-control form-control-lg",
                                placeholder = "Enter task title"
                            })
                    </div>
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                        @Html.TextAreaFor(model => model.Description, new
                            {
                                @class = "form-control form-control-lg",
                                rows = 4,
                                placeholder = "Describe your task..."
                            })
                    </div>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DueDate, "Due Date", new { @class = "form-label fw-bold" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                @Html.TextBoxFor(model => model.DueDate, "{0:yyyy-MM-dd}", new
                                    {
                                        @class = "form-control form-control-lg",
                                        type = "date"
                                    })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Priority, new { @class = "form-label fw-bold" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-exclamation-circle"></i></span>
                                @Html.DropDownListFor(model => model.Priority,
                                         new SelectList(new[] { "Low", "Medium", "High" }),
                                         new { @class = "form-select form-control-lg" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(model => model.IsCompleted, new
                            {
                                @class = "form-check-input",
                                role = "switch",
                                style = "transform: scale(1.5);"
                            })
                        @Html.LabelFor(model => model.IsCompleted, "Mark as Completed", new { @class = "form-check-label fw-bold" })
                    </div>
                </div>

                <div class="form-group text-end">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg px-5">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .input-group-text {
        background: linear-gradient(45deg, #e9ecef, #f8f9fa);
        border-right: none;
    }

    .form-control, .form-select {
        border-left: none;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: none;
            border-color: #dee2e6;
        }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 1rem 1.5rem;
    }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }
</style>

<!-- Add Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">